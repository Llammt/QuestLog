<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="task"
            type="com.example.questlog.Task" />

        <variable
            name="viewModel"
            type="com.example.questlog.TasksViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/background"
        app:cardElevation="6dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/task_frame_main"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                        <TextView
                            android:id="@+id/task_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/kurale_regular"
                            android:padding="14dp"
                            android:text="@{task.taskName}"/>

                        <CheckBox
                            android:id="@+id/task_done"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="10dp"
                            android:textSize="16sp"
                            android:fontFamily="@font/kurale_regular"
                            android:padding="8dp"
                            android:button="@drawable/checkbox_image_selector"
                            android:buttonTint="@null"
                            app:buttonTint="@null"
                            android:clickable="false"
                            android:text="@string/checkbox_text"
                            android:checked="@{task.taskDone}"/>

                </LinearLayout>

                    <ImageButton
                        android:id="@+id/delete_button"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center"
                        android:src="@drawable/delete_button_selector"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:stateListAnimator="@animator/scale_press"
                        android:onClick="@{() -> viewModel.deleteTask(task.taskId)}"/>

            </LinearLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</layout>